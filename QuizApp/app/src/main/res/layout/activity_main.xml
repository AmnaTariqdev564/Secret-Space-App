<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold"
        android:textColor="@color/titleTextColor"
        android:background="@drawable/title_background"
        android:layout_marginBottom="16dp" />

    <!-- Question Section -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Question will appear here"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/questionTextColor"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/question_background" />

    <!-- Options Group -->
    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:buttonTint="@color/radioButtonColor"
            android:textColor="@color/radioButtonTextColor"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:buttonTint="@color/radioButtonColor"
            android:textColor="@color/radioButtonTextColor"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:buttonTint="@color/radioButtonColor"
            android:textColor="@color/radioButtonTextColor"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:buttonTint="@color/radioButtonColor"
            android:textColor="@color/radioButtonTextColor"
            android:layout_marginBottom="8dp" />
    </RadioGroup>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:background="@drawable/button_dark_background"
            android:textColor="@color/buttonTextColor"
            android:layout_marginEnd="8dp" />


        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:background="@drawable/button_dark_background"
            android:textColor="@color/buttonTextColor"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="#28A745"
        android:textColor="#FFFFFF"
        android:visibility="gone" />


</LinearLayout>
