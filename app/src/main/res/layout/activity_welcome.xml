<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4ED"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Soft light background -->

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/WelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Welcome to Your Secret Space"
        android:textColor="#4A148C"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Welcome Image -->
    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_welcome" /> <!-- Add your desired image -->

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4A148C"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="Get Started"
        android:textColor="#FFFF"
        android:textSize="18sp" />

    <!-- Password Bar -->
    <EditText
        android:id="@+id/passwordBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D1C4E9"
        android:fontFamily="sans-serif-light"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:textColor="#4A148C"
        android:textColorHint="#8E24AA" />

    <!-- Numeric Keypad -->
    <GridLayout
        android:id="@+id/numericKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:padding="10dp"
        android:rowCount="4">

        <!-- Keypad Buttons -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" /> <!-- Empty Space -->

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#7B1FA2"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" /> <!-- Empty Space -->

    </GridLayout>


</LinearLayout>
