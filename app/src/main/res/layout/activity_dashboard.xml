<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background_image">

    <!-- Title Text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Secret Space"
        android:textSize="30sp"
        android:textColor="#084a80"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="34dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Your Secrets Section -->
    <TextView
        android:id="@+id/secretsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Future Goals"
        android:textSize="20sp"
        android:textColor="#084a80"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:fontFamily="sans-serif-light" />

    <EditText
        android:id="@+id/secretsBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_box"
        android:text="I want to send my parents on Hajj Inn Shaa Allah❤..."
        android:textColor="#555555"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:layout_marginBottom="24dp" />

    <!-- To-Do List Section -->


    <!-- To-Do Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <CheckBox
            android:id="@+id/todoItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item 1"
            android:textColor="#a41449"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/todoItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item 2"
            android:textColor="#a41449"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/todoItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item 3"
            android:textColor="#a41449"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Add New To-Do Button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Item"
        android:textColor="#FFFFFF"
        android:backgroundTint="#a41449"
        android:textSize="16sp"
        android:padding="14dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="8dp"
         />

</LinearLayout>
